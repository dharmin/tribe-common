/* Dependency CSS */
.tribe-dependent {
	display: none;

	&.tribe-active {
		display: inline-block;

		div&,
		p&,
		h1&,
		h2&,
		h3&,
		h4&,
		h5&,
		h6& {
			display: block;

			&.select2-container {
				display: inline-block;
			}
		}

		td&,
		th& {
			display: table-cell;
		}

		tr& {
			display: table-row;
		}
	}
}

.tribe-dependency {
	&.tribe-dependency-hide-checked:checked {
		display: none;
	}
}